@model List<Product>

<div class="card shadow border-0 ">
    <div class="card-header bg-secondary bg-gradient text-light text-center">
        <h2>Products</h2>
    </div>

    <div class="card-body">
        <div class="container">
           <div class="row pb-2 d-block text-end">
                <a asp-area="Customer" asp-controller="Product" asp-action="Upsert" class="btn btn-primary col-2"><i class="bi bi-plus-square"></i> Create</a>
           </div>
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th class="col-4">Title</th>
                        <th class="col-4">Author</th>
                        <th class="col-2">Price</th>
                        <th class="col-2">Category</th>
                        <th class="col-4">Options</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td class="col-4">@product.Title</td>
                            <td class="col-4">@product.Author</td>
                            <td class="col-2">@product.Price</td>
                            <td class="col-2"></td>
                            <td class="col-4">
                                <div class="d-flex justify-content-center">
                                    <a asp-area="Customer" asp-controller="Product" asp-action="Upsert" asp-route-myId="@product.Id" class="btn btn-primary mx-2"> Edit</a>
                                    <a asp-area="Customer" asp-controller="Product" asp-action="Delete" asp-route-Id="@product.Id" class="btn btn-danger mx-2"> Delete</a>
                                </div>

                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

