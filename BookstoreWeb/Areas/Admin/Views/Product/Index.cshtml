@model List<Product>

<div class="card shadow border-0 ">
    <div class="card-header bg-secondary bg-gradient text-light text-center">
        <h2>Products</h2>
    </div>

    <div class="card-body">
        <div class="container">
           <div class="row pb-2 d-block text-end">
                <a asp-area="Admin" asp-controller="Product" asp-action="Upsert" class="btn btn-primary col-2"><i class="bi bi-plus-square"></i> Create</a>
           </div>
            <table id="tblData" class="table table-striped table-bordered w-100">
                <thead>
                    <tr>
                        <th class="col-4">Title</th>
                        <th class="col-2">Author</th>
                        <th class="col-2">ISBN</th>
                        <th class="col-2">Price</th>
                        <th class="col-2">Category</th>
                        <th class="col-4">Options</th>
                    </tr>
                </thead>
                
            </table>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/product.js"></script>
}
