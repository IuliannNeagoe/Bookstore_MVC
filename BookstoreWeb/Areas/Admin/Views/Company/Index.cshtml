@model List<Company>

<div class="card shadow border-0">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-light">Companies</h2>
            </div>
        </div>
    </div>

    <div class="card-body">
        <div class="container">
            <div class="text-end mb-2">
                <a asp-controller="Company" asp-action="Upsert" class="btn btn-primary"><i class="bi bi-plus-circle"></i>Add Company</a>
            </div>
            <table id="tblData" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th class="col-2">Name</th>
                        <th class="col-2">StreetAddress</th>
                        <th class="col-2">City</th>
                        <th class="col-2">State</th>
                        <th class="col-2">PostalCode</th>
                        <th class="col-2">PhoneNumber</th>
                        <th class="col-2">Options</th>
                    </tr>
                </thead>

               
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/company.js?v=2"></script>
}

