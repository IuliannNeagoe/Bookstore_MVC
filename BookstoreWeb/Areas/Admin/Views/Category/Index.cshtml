@model List<Category>

<div class="card shadow border-0">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-light">Categories</h2>
            </div>
        </div>
    </div>

    <div class="card-body">
        <div class="container">
            <div class="text-end mb-2">
                <a asp-controller="Category" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i>Add Category</a>
            </div>
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th class="col-4">Category Name</th>
                        <th class="col-4">Display Order</th>
                        <th class="col-4">Options</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var category in Model)
                    {
                        <tr>
                            <td class="col-4">@category.Name</td>
                            <td class="col-4">@category.DisplayOrder</td>
                            <td class="col-4 text-center">
                                <div class="d-flex justify-content-center">
                                    <a asp-action="Edit" asp-route-myId="@category.Id" class="btn btn-primary mx-2">
                                        <i class="bi bi-pencil-square"></i>Edit
                                    </a>

                                    <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger mx-2">
                                        <i class="bi bi-trash3"></i>Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>



